{
  "name": "resumegen",
  "productName": "Resume Generator",
  "version": "2.0.0",
  "description": "A resume generator",
  "main": "main.js",
  "bin": "cli.js",
  "scripts": {
    "start": "electron .",
    "build": "npm-run-all build:*",
    "build:pug": "npx pug-cli src/pug/ -o app/",
    "build:sass": "node-sass-chokidar src/sass/ -o app/style/",
    "dev": "npm-run-all -p dev:*",
    "dev:electron": "electron . --debug",
    "dev:pug": "npx pug-cli -w src/pug/ -o app/",
    "dev:sass": "node-sass-chokidar -w src/sass/ -o app/style/",
    "package": "npm-run-all package:*",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist",
    "package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=out --icon=assets/app-icon/win/app.ico",
    "package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=out",
    "package:sign-exe": "signcode './out/resumegen-win32-ia32/resumegen.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Resume Generator' --url 'http://electron.atom.io'",
    "package:installer": "node ./script/installer.js",
    "package:sign-installer": "signcode './out/windows-installer/ElectronAPIDemosSetup.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Resume Generator' --url 'http://electron.atom.io'",
    "xpackage:mas": "./script/mas.sh",
    "windows-store": "node ./script/windows-store.js",
    "release": "node ./script/release.js",
    "prepack": "check-for-leaks",
    "prepush": "check-for-leaks"
  },
  "author": "Yorick <yorick@ctrlaltdev.xyz>",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/ctrlaltdev/resume.git"
  },
  "bugs": {
    "url": "https://github.com/ctrlaltdev/resumegen/issues"
  },
  "dependencies": {
    "electron": "^3.0.4",
    "electron-log": "^2.2.17",
    "electron-settings": "^3.2.0",
    "electron-shortcut-normalizer": "^1.0.0",
    "glob": "^7.1.3",
    "highlight.js": "^9.13.0",
    "update-electron-app": "^1.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "check-for-leaks": "^1.2.0",
    "devtron": "^1.4.0",
    "electron-packager": "^12.2.0",
    "electron-winstaller": "^2.7.0",
    "husky": "^1.1.2",
    "mocha": "^5.2.0",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "signcode": "^1.0.0",
    "spectron": "^4.0.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
